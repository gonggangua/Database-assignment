<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UserMapper">

    <insert id="insertUser" parameterType="map">
        insert into users(`name`, `mail`, `level`, `status`, `registry`, `money`)
            values(#{name}, #{mail}, 1, 'offline', now(), 0);
    </insert>

    <update id="createUser" parameterType="map">
        create user #{name} identified by #{password}
    </update>

    <update id="createSelfView" parameterType="map">
        create view #{name}SelfView as
        select * from users where name = #{name}
    </update>

    <update id="grantSelfView" parameterType="map">
        grant select, show view, update(`name`, `mail`, `status`) on #{name}SelfView to #{name}
    </update>

    <update id="grantRegularUser" parameterType="map">
        grant regularUser to #{name}
    </update>

    <select id="selectAll" resultType="User">
        select * from users
    </select>

    <select id="selectById" parameterType="int" resultType="User">
        select * from users
            where id = #{id}
    </select>

    <select id="selectByName" parameterType="String" resultType="User">
        select * from users
        where `name` = #{name}
    </select>

</mapper>